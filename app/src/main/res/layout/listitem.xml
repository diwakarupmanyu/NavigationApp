<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/listitem_image_width"
        android:layout_height="@dimen/listitem_image_height"
        android:layout_marginStart="@dimen/listitem_marignStart"
        android:layout_marginTop="@dimen/listitem_marignTop"
        android:layout_marginEnd="@dimen/listitem_marginEnd"
        android:layout_marginBottom="@dimen/listitem_marginBottom"
        android:scaleType="centerCrop"
        android:src="@drawable/arjun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/listitem_marignStart"
        android:layout_marginTop="@dimen/listitem_marignTop"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/branch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/listitem_marignStart"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/listitem_marginEnd"
        android:layout_marginBottom="@dimen/listitem_marginBottom"
        android:text="branch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />
</androidx.constraintlayout.widget.ConstraintLayout>